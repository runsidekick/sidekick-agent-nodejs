  "bugs": {
    "url": "https://github.com/runsidekick/sidekick-agent-nodejs/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "homepage": "https://github.com/runsidekick/sidekick-agent-nodejs#readme"
